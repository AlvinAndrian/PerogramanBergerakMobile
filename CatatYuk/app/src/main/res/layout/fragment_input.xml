<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="Tambah Catatan"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/judulInput"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/JudulInput"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerDescInput" />

    <EditText
        android:id="@+id/judulDesc"
        android:layout_width="341dp"
        android:layout_height="249dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="@string/DescInput"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/judulInput"
        app:layout_constraintTop_toBottomOf="@+id/headerJudulInput" />

    <TextView
        android:id="@+id/headerJudulInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/DescInput"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/judulDesc"
        app:layout_constraintTop_toBottomOf="@+id/judulInput" />

    <TextView
        android:id="@+id/headerDescInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/JudulInput"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/judulInput"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/Simpan"
        app:layout_constraintEnd_toEndOf="@+id/judulDesc"
        app:layout_constraintTop_toBottomOf="@+id/judulDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>