<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="18dp">

        <View
            android:id="@+id/notesPriority"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:background="@drawable/green_priority"/>

        <View
            android:id="@+id/notesAlarm"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="42dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_baseline_alarm_on_24"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/product_sans_regular"
                android:paddingLeft="5dp"
                android:textSize="22dp"
                android:text="Title"/>

            <TextView
                android:id="@+id/notesSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="5dp"
                android:paddingTop="4dp"
                android:fontFamily="@font/product_sans_regular"
                android:text="Subtitle"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/notesDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="4dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/black"
                    android:text="16 April 2022"/>

                <TextView
                    android:id="@+id/notesReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="4dp"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/red"
                    android:text="16 April 2022"/>
            </LinearLayout>
        </LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>