<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.beritakita">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeritaKita"
        tools:targetApi="31">
        <activity
            android:name=".View.WebActivity"
            android:exported="false" />
        <activity
            android:name=".View.BookmarkActivity"
            android:exported="false" />
        <activity
            android:name=".View.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".View.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".View.SeeAllActivity"
            android:exported="false" />
        <activity
            android:name=".View.HealthActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".View.ScienceActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".View.BussinessActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".View.SportActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".View.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.MainActivity"
            android:exported="true" />
    </application>

</manifest>